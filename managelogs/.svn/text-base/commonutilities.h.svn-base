#ifndef COMMONUTILITIES_H
#define COMMONUTILITIES_H

#define PATH "/var/log/utility/"

/* 
 * Open a file in a predefined path which name is provided by the function
 * caller
 */
int initlog(char * );

/*
 * Just like syslog(...), prints the provided string into the file
 * previously opened
 */
int mylog(char * , ...);

/*
 * Close the opened file
 */
int deinitlog();

